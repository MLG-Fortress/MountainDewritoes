            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>net.minecrell</groupId>
            <artifactId>ServerListPlus</artifactId>
            <version>3.4.9-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.github.MLG-Fortress</groupId>
            <artifactId>ChesterPlugin</artifactId>
            <version>2.7.1</version>
        </dependency>
        <dependency>
            <groupId>com.github.MLG-Fortress</groupId>
